<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_style">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="navigation_button_style">
        <item name="android:fontFamily">@font/amaranth</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="sub_heading_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/sub_heading_size</item>
    </style>

    <style name="weather_detail_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/weather_detail_text</item>
    </style>

    <style name="weather_detail_value_style">
        <item name="android:paddingStart">@dimen/small_padding</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/weather_detail_text</item>
    </style>
</resources>